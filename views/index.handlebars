<br>
<h2 id="color-override">Pick a Burger</h2>
<panel>
    <form class="create-form">
        <div class="form-group">
            <label for="newburger" id="color-override">Order:</label>
            <input type="text" id="newburger" name="burger">
            <button type="submit" class="btn btn-success" id="addburger"><img src="/public/assets/img/logo.PNG"></button>
        </div>
    </form>
</panel>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel heading" id="lefthead"><strong>New Burgers</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><img src="/public/assets/img/logo.PNG"></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><img src="/public/assets/img/logo.PNG"></button>
                    <hr>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>



